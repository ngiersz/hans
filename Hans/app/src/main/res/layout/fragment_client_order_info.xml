<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    android:background="#FFFFFF"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Punkt początkowy"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/fromCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Miasto"
                android:textSize="20sp"
                android:editable="false"/>


            <EditText
                android:id="@+id/fromZipCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Kod pocztowy"
                android:textSize="20sp"
                android:editable="false"/>


            <EditText
                android:id="@+id/fromStreet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ulica"
                android:textSize="20sp"
                android:editable="false"/>


            <EditText
                android:id="@+id/fromNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Numer domu"
                android:textSize="20sp"
                android:editable="false"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Punkt końcowy"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/toCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Miasto"
                android:textSize="20sp"
                android:editable="false"/>


            <EditText
                android:id="@+id/toZipCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Kod pocztowy"
                android:textSize="20sp"
                android:editable="false"/>


            <EditText
                android:id="@+id/toStreet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ulica"
                android:textSize="20sp"
                android:editable="false"/>


            <EditText
                android:id="@+id/toNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Numer domu"
                android:textSize="20sp"
                android:editable="false"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Opis"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Opis"
                android:textSize="20sp"
                android:editable="false"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cena (zł)"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:editable="false"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Waga (kg)"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/weight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:editable="false"/>
                </LinearLayout>




            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Szerokość (cm)"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/width"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:editable="false"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wysokość (cm)"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/height"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:editable="false"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Głębokość (cm)"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/depth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:editable="false"/>

                </LinearLayout>

            </LinearLayout>
            <Button
                android:id="@+id/cancel_order_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@color/colorPrimary"
                android:textColor="#FFFFFF"
                android:text="Anuluj zlecenie" />
        </LinearLayout>


    </ScrollView>




</android.support.constraint.ConstraintLayout>